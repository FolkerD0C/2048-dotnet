{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-game-2048",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Game2048/Game2048.Managers/Game2048.Managers.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build-console-client",
            "command": "dotnet",
            "type": "process",
            "dependsOn": "test-game-2048",
            "args": [
                "build",
                "${workspaceFolder}/ConsoleClient/ConsoleClient.App/ConsoleClient.App.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "test-game-2048",
            "command": "dotnet",
            "type": "process",
            "dependsOn": "build-game-2048",
            "args": [
                "test",
                "${workspaceFolder}/Game2048/Game2048.Test/Game2048.Test.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "build-monogame-client",
            "command": "dotnet",
            "type": "process",
            "dependsOn": "test-game-2048",
            "args": [
                "build",
                "${workspaceFolder}/MonoGameClient/MonoGameClient.App/MonoGameClient.App.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        }
    ]
}